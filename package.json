{
  "name": "solid-material-ui",
  "version": "0.1.0",
  "main": "dist/index.js",
  "description": "Material like ui library using SolidJS.",
  "repository": "git@github.com:azuwey/solid-material-ui.git",
  "author": "David Zarandi <david.zarandi@pm.me>",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "css-color-converter": "^2.0.0",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-functions": "^4.0.2",
    "precss": "^4.0.0",
    "ts-standard": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "solid-js": "^1.1.0"
  },
  "scripts": {
    "lint": "ts-standard",
    "prebuild:package": "yarn lint && rm -rf lib",
    "build:package": "tsc",
    "postbuild:package": "postcss src/**/*.css --base src --dir lib"
  },
  "files": [
    "/lib"
  ],
  "ts-standard": {
    "ignore": [
      "node_modules/*",
      "dist/**/*"
    ]
  },
  "keywords": [
    "material", "like", "ui", "solidjs", "solid"
  ]
}
